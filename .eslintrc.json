{
  "extends": "next/core-web-vitals",

  "rules": {
    "quotes": ["error", "double", { "avoidEscape": true }],
    "import/newline-after-import": "error",
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "groups": [
          ["builtin", "external"],
          ["internal", "parent", "sibling"]
        ]
      }
    ]
  }
}
